<% content_for :title, "Editing movie" %>

<h1 class="page-title">Editing Movie</h1>

<%= render "form", movie: @movie %>

<br>

<div class="movie-links">
  <%= link_to "Show this Movie", movie_path(@movie, sort: params[:sort], direction: params[:direction]), class: "movie-link" %> |
  <%= link_to "Back to Movies", movies_path(sort: params[:sort], direction: params[:direction]), class: "back-link" %>
</div>

<style>
  .page-title {
    color: #white;
    font-size: 2.5em;
    text-align: center;
    margin-bottom: 20px;
  }

  .form-container {
    background-color: #f3e5f5;
    border-radius: 8px;
    padding: 20px;
    max-width: 600px;
    margin: 0 auto;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  }

  form input, form textarea, form select {
    width: 100%;
    padding: 10px;
    margin-bottom: 15px;
    border-radius: 4px;
    border: 1px solid #ddd;
    font-size: 1rem;
  }

  .movie-links {
    text-align: center;
    margin-top: 20px;
  }

  .movie-link, .back-link {
    text-decoration: none;
    color: #6a1b9a;
    font-weight: bold;
  }

  .movie-link:hover, .back-link:hover {
    color: #ab47bc;
  }
</style>
